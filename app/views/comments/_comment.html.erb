<div class="border-l-4 border-blue-200 pl-4">
  <div class="flex items-start space-x-4">
    <div class="flex-shrink-0">
      <div class="w-8 h-8 rounded-full bg-gray-200 flex items-center justify-center">
        <%= comment.user.name[0].upcase %>
      </div>
    </div>
    <div class="flex-1 min-w-0">
      <div class="flex justify-between items-start">
        <div>
          <h3 class="font-medium text-gray-900"><%= comment.user.name %></h3>
          <p class="text-sm text-gray-500"><%= comment.created_at.strftime('%b %d, %Y') %></p>
        </div>
        <% if comment.user == current_user %>
          <div class="flex space-x-2">
            <%= link_to 'Edit', edit_comment_path(comment), class: "text-blue-600 hover:text-blue-800" %>
            <%= link_to 'Delete', comment, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-600 hover:text-red-800" %>
          </div>
        <% end %>
      </div>
      <p class="mt-2 text-gray-700"><%= comment.content %></p>
      
      <% if comment.replies.any? %>
        <div class="mt-4 space-y-4">
          <% comment.replies.each do |reply| %>
            <%= render 'comments/comment', comment: reply %>
          <% end %>
        </div>
      <% end %>
      
      <div class="mt-4">
        <%= render 'comments/form', commentable: commentable, parent_comment: comment %>
      </div>
    </div>
  </div>
</div>
