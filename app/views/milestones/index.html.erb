<div class="container mx-auto px-4 py-8">
  <div class="max-w-7xl mx-auto">
    <!-- Page Header -->
    <div class="flex justify-between items-center mb-6">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Milestones</h1>
        <p class="mt-1 text-sm text-gray-500">Track your major goals and achievements</p>
      </div>
      <%= link_to 'New Milestone', new_milestone_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>

    <!-- Milestones Grid -->
    <% if @milestones.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @milestones.each do |milestone| %>
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="p-6">
              <div class="flex justify-between items-start">
                <div>
                  <h2 class="text-xl font-semibold text-gray-900"><%= milestone.title %></h2>
                  <p class="mt-2 text-gray-600"><%= milestone.description %></p>
                  
                  <div class="mt-4 space-y-2">
                    <div class="flex items-center text-sm text-gray-500">
                      <svg class="h-5 w-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                      <span>Target Date: <%= milestone.target_date.strftime('%b %d, %Y') %></span>
                    </div>
                    <div class="flex items-center text-sm text-gray-500">
                      <svg class="h-5 w-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      <span>Status: <%= milestone.status.humanize %></span>
                    </div>
                    <div class="flex items-center text-sm text-gray-500">
                      <svg class="h-5 w-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                      <span>Position: <%= milestone.position %></span>
                    </div>
                  </div>
                </div>
                
                <div class="flex space-x-2">
                  <%= link_to 'View', milestone_path(milestone), class: "text-blue-600 hover:text-blue-800" %>
                  <%= link_to 'Edit', edit_milestone_path(milestone), class: "text-blue-600 hover:text-blue-800" %>
                  <%= link_to 'Delete', milestone_path(milestone), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-600 hover:text-red-800" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow p-8 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No milestones found</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating a new milestone.</p>
        <%= link_to 'Create a Milestone', new_milestone_path, class: "mt-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% end %>
  </div>
</div>
