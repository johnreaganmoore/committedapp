<div class="container mx-auto px-4 py-8">
  <div class="max-w-7xl mx-auto">
    <!-- Page Header -->
    <div class="flex justify-between items-center mb-6">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Commitments</h1>
        <p class="mt-1 text-sm text-gray-500">Track your progress and stay accountable</p>
      </div>
      <%= link_to 'New Commitment', new_commitment_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>

    <!-- Active Commitments -->
    <% if @commitments.active.any? %>
      <div class="mb-8">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Active Commitments</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @commitments.active.each do |commitment| %>
            <%= render 'commitment', commitment: commitment %>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Completed Commitments -->
    <% if @commitments.completed.any? %>
      <div>
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Completed Commitments</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @commitments.completed.each do |commitment| %>
            <%= render 'commitment', commitment: commitment %>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow p-8 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No commitments found</h3>
        <p class="mt-1 text-sm text-gray-500">Start by creating your first commitment.</p>
        <%= link_to 'Create a Commitment', new_commitment_path, class: "mt-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% end %>
  </div>
</div>
