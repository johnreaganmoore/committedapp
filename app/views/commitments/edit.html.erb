<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto">
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex justify-between items-center mb-6">
          <h1 class="text-2xl font-bold text-gray-900">Edit Commitment</h1>
          <div class="flex items-center space-x-4">
            <%= link_to 'Back to Commitments', commitments_path, class: "text-blue-600 hover:text-blue-800" %>
            <%= button_to commitment_path(@commitment), 
                method: :delete, 
                style: "display: inline-flex; align-items: center; padding: 0.5rem 1rem; border: 1px solid transparent; font-size: 0.875rem; font-weight: 500; border-radius: 0.375rem; color: white; background-color: rgb(220, 38, 38); cursor: pointer; transition: all 0.2s ease-in-out;",
                onmouseover: "this.style.backgroundColor='rgb(185, 28, 28)'",
                onmouseout: "this.style.backgroundColor='rgb(220, 38, 38)'",
                data: { turbo_confirm: 'Are you sure you want to delete this commitment? This action cannot be undone.' } do %>
              <svg style="height: 1rem; width: 1rem; margin-right: 0.5rem;" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
              Delete
            <% end %>
          </div>
        </div>

        <%= render 'form', commitment: @commitment %>
      </div>
    </div>
  </div>
</div>
